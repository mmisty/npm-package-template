{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es2015",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@src": ["./index.ts"],
      "@src/*": ["./*"]
    }
  },
  "include": ["src", "jest.setup.ts", "tests"]
}
